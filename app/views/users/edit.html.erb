
<div class = "container">
  <%= render "layouts/errors", obj: @user %>
  
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label>
          <p><%= f.text_field :name, autofocus: true, id:"user_name", placeholder:"名前", class:"form-control name"%></p>
        </div>
        <div class="form-group">
          <label for="user_image">Image</label>
          <p><%= f.file_field :profile_image, placeholder: "Image", accept: "image/*", class:"form-control-file user_image" %></p>
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <p><%= f.text_area :introduction, class:"form-control introduction" %></p>
        </div>
        <div class = "form-group">
          <%= f.submit "Update User", class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
