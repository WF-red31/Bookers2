
<h2>Book detail</h2>
<table class = "table">
  <tbody>
    <tr>
      <td>
        <%= @book.user.name%>
        <%= image_tag @book.user.get_profile_image(100,100) %>
      </td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
    </tr>
  </tbody>
</table>
