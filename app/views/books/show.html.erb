<div class = "row">
  <div class = "col-md-3">
    <%= render 'users/userinfo', user: @user %>
    <%= render 'new', book: @books %>
  </div>

  <h2>Book detail</h2>
  <table class = "table">
    <tbody>
      <tr>
        <td>
          <%= @book.user.name%>
          <%= image_tag @book.user.get_profile_image(100,100) %>
        </td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
        <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ"%></td>
      </tr>
    </tbody>
  </table>
</div>